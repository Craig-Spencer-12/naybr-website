---
const currentPath = Astro.url.pathname;
const { href, label } = Astro.props;

let isActive = false;
if (currentPath === href) {
  isActive = true;
}
---

<div class="group relative">
  <a class="font-bold" href={href}>{label}</a>
  <span
    class={`absolute left-1/2 -bottom-3 transform -translate-x-1/2 w-1.5 h-1.5 rounded-full bg-black transition-opacity ${
      isActive ? "opacity-100" : "opacity-0 group-hover:opacity-100"
    }`}
  />
</div>
